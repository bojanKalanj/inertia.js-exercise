<h1>Services for <%= @company.name %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Duration</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.name %></td>
        <td><%= service.duration %> min</td>
        <td><%= number_to_currency(service.price) %></td>
        <td><%= link_to 'Show', company_service_path(@company, service) %></td>
        <td><%= link_to 'Edit', edit_company_service_path(@company, service) %></td>
        <td><%= link_to 'Destroy', company_service_path(@company, service),
                        data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Book', available_slots_company_service_appointments_path(@company, service) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Service', new_company_service_path(@company) %>
<%= link_to 'Back to Company', company_path(@company) %>
